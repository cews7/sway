<div class="row">
  <div class="col s2">
    <p></p>
  </div>
  <div class="col s8">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Create Account</span>
        <%= form_for @user do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "e.g. jon" %>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "e.g. jon@gmail.com" %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "Create Account!", class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
