<div class="row">
  <div class="col s2">
    <p></p>
  </div>
  <div class="col s8">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Login</span>
        <%= form_for :session, url: login_path do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.submit "Login!", class: "btn" %>
        <% end %>
      </div>
    </div>
    <div class="card-action">
      <%= link_to "Sign Up!", new_user_path, class: "btn" %>
    </div>
  </div>
</div>
